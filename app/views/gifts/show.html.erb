<div class="gift-details">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6">
      </div>
      <div class="col-xs-12 col-md-6">
        <h1><%= @gift.name.capitalize %></h1>
        <p><%= @gift.sku %></p>
        <p><%= @gift.description.capitalize %></p>
        <p>Amount: <%= humanized_money_with_symbol(@gift.price) %></p>
        <%= cl_image_tag @gift.image %>
        <%= link_to 'Order now', new_gift_order_path(@gift), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>






