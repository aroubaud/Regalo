<div class="gift-details">
  <div class="container">
    <div class="row">
      <div class="flex-order">
        <div class="col-xs-12 col-md-6">
          <%= cl_image_tag @gift.image, id: 'imgift' %>
        </div>
        <div class="col-xs-12 col-md-6">
          <h1 id= "giftname"><%= @gift.name.capitalize %></h1>
          <p id="description"><%= @gift.description.capitalize %></p>
          <div class='payment-details'>
            <p id="price"><%= humanized_money_with_symbol(@gift.price) %></p>
            <%= link_to 'Order now', new_gift_order_path(@gift), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>






