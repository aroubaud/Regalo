<% if action_name == 'home' %>
  <div class="navbar-regalo">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-regalo-brand" do %>
      <%= image_tag 'regalo-logo.png', alt: '', height: 50 %>
    <% end %>

    <!-- Right Navigation -->
    <div class="navbar-regalo-right">

      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete, class: "navbar-regalo-item navbar-regalo-link" do %>
        Log out
        <% end %>
      <% else %>
        <!-- Login link (when logged out) -->

        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-regalo-item navbar-regalo-link" %>
      <% end %>
    </div>
  </div>


<% else %>
   <div class="navbar-regalo-color">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-regalo-brand" do %>
      <%= image_tag 'regalo-logo.png', height: 50 %>
    <% end %>

    <!-- Right Navigation -->
    <div class="navbar-regalo-right">

      <% if user_signed_in? %>
        <!-- Links when logged in -->
        <%= link_to destroy_user_session_path, method: :delete, class: "navbar-regalo-item navbar-regalo-link-color" do %>
        Log out
        <% end %>
      <% else %>
        <!-- Login link (when logged out) -->

        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-regalo-item navbar-regalo-link-color" %>
      <% end %>
    </div>
  </div>
<% end %>
